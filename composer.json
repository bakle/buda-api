{
    "name": "bakle/buda-api",
    "description": "PHP library for buda.com API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bashir Akle",
            "email": "bashir.akle@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=7.3",
        "guzzlehttp/guzzle": "^7.0@dev",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17@dev",
        "phpunit/phpunit": "^9.3@dev"
    },
    "autoload-dev": {
        "psr-4": {
            "Bakle\\Buda\\Tests\\": "tests"
        }
    },
    "autoload": {
        "psr-4": {
            "Bakle\\Buda\\": "src"
        }
    },
    "scripts": {
        "php-cs-fixer": "php-cs-fixer fix --config=.php_cs"
    }
}
